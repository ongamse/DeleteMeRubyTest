<% if user_signed_in? and @post.read_access?(current_user)%>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @post.description %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% else %>
 <p>
   Hey! It looks like you don't have acccess to this post. Sorry about that.
 </p>
<% end %>
